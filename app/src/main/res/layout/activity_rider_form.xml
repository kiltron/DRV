<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderForm">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rider_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"

        android:layout_marginTop="19dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="11dp"
        android:text="Пожалуйста, напишите свои данные для проверки"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rider_car"
        android:layout_marginStart="25dp"

        android:layout_marginEnd="25dp"
        android:layout_marginBottom="16dp"
        android:text="Пожалуйста, напишите данные машины"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/rider_name"
        android:layout_width="800px"


        android:layout_height="wrap_content"
        android:layout_above="@+id/rider_exp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="5dp"
        android:hint="ФИО"
        android:textColor="#000000"
        tools:textColorHint="#3C3942" />

    <EditText
        android:id="@+id/rider_exp"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rider_ip"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="14dp"
        android:hint="Стаж"
        android:inputType="number"
        android:textColor="#000000"
        tools:textColorHint="#3C3942" />

    <EditText
        android:id="@+id/rider_ip"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="17dp"
        android:hint="Название ИП"
        android:textColor="#000000"
        tools:textColorHint="#3C3942" />

    <EditText
        android:id="@+id/rider_car"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rider_number_osago"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="32dp"
        android:hint=" Марка, модель, госномер"
        android:textColor="#000000"
        tools:textColorHint="#3C3942" />

    <EditText
        android:id="@+id/rider_number_osago"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ride_term"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="30dp"
        android:hint="Номер ОСАГО"
        android:textColor="#000000"
        tools:textColorHint="#3C3942" />

    <EditText
        android:id="@+id/ride_term"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirm_rider"
        android:layout_below="@+id/shippment_city2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="10dp"
        android:hint="Срок действия ОСАГО"
        android:textColor="#000000"
        tools:textColorHint="#3C3942" />

    <Button
        android:id="@+id/confirm_rider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttons"
        android:text="Отправить"
        android:textColor="@android:color/white"
        android:textSize="30dp" />
</RelativeLayout>